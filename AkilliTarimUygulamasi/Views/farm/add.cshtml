@model AkilliTarimUygulamasi.Models.FarmData

@{
    ViewData["Title"] = "Yeni Tarım Verisi Ekle";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Yeni Tarım Verisi Ekle</h2>

    <form method="post" asp-action="Add">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Tarla Adı</label>
                    <input asp-for="Name" class="form-control" placeholder="Tarlanın adını girin" required />
                </div>
                <div class="mb-3">
                    <label asp-for="Area" class="form-label">Alan (m²)</label>
                    <input asp-for="Area" type="number" class="form-control" placeholder="Alan (m²)" required />
                </div>
                <div class="mb-3">
                    <label asp-for="Crop" class="form-label">Ürün</label>
                    <input asp-for="Crop" class="form-control" placeholder="Ürün adını girin" required />
                </div>
                <button type="submit" class="btn btn-success w-100">
                    <i class="fas fa-save me-2"></i>Kaydet
                </button>
            </div>
        </div>
    </form>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Geri Dön</a>
    </div>
</div>