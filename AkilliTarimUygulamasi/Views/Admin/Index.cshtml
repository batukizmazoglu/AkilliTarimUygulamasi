@{
ViewData["Title"] = "Admin Paneli";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .search-box {
            position: relative;
        }
        .search-result {
            position: absolute;
            top: 100%;
            right: 0;
            width: 300px;
            background: white;
            border: 1px solid #ddd;
            border-radius: 4px;
            display: none;
            z-index: 1000;
        }
        .search-box:focus-within .search-result {
            display: block;
        }
    </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
        <a class="navbar-brand" href="/">
            <i class="fas fa-home me-2"></i>Ana Sayfa
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Users" asp-action="Index">
                        <i class="fas fa-users me-1"></i>Users
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Index">
                        <i class="fas fa-home me-1"></i>Ana Sayfa
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Crops/Index">
                        <i class="fas fa-leaf me-1"></i>Crops
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Fields/Index">
                        <i class="fas fa-cogs me-1"></i>Fields
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Sales/Index">
                        <i class="fas fa-dollar-sign me-1"></i>Sales
                    </a>
                </li>

            </ul>

            <div class="search-box">
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Ara..." aria-label="Search">
                    <button class="btn btn-outline-light" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
                <div class="search-result p-2">
                    <div class="search-items">
                        <!-- Arama sonuçları buraya dinamik olarak gelecek -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>

<div class="container" style="margin-top: 80px;">
    <main role="main" class="pb-3">
    </main>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    // Arama fonksiyonu
    $(document).ready(function() {
        $('.search-box input').on('keyup', function() {
            var searchTerm = $(this).val();
            if(searchTerm.length > 2) {
                // AJAX çağrısı yapılacak
                $('.search-items').html('<div class="p-2">Aranıyor...</div>');
            }
        });
    });
</script>
</body>
</html>