@model AkilliTarimUygulamasi.Models.Crop

<div class="container mt-4">
    <h2>Yeni Ürün Ekle</h2>
    <form asp-action="Add" method="post">
        <div class="mb-3">
            <label for="Name">Ürün Adı</label>
            <input type="text" id="Name" name="Name" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="PlantingDate">Ekildiği Tarih</label>
            <input type="date" id="PlantingDate" name="PlantingDate" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="Quantity">Miktar</label>
            <input type="number" id="Quantity" name="Quantity" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="Status">Durum</label>
            <input type="text" id="Status" name="Status" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="FieldId">Tarla</label>
            <select id="FieldId" name="FieldId" class="form-select">
                @foreach (var field in ViewBag.Fields)
                {
                    <option value="@field.Id">@field.Name</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-success">Kaydet</button>
    </form>
</div>