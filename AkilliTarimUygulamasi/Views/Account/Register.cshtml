@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AkilliTarimUygulamasi.Models.viewModels.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kayıt Ol - Akıllı Tarım Sistemi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Aynı stil tanımları login sayfasıyla ortak -->
</head>
<body>
    <div class="auth-wrapper d-flex align-items-center py-5">
        <div class="container">
            <div class="card auth-card mx-auto">
                <div class="card-body p-4 p-lg-5">
                    <div class="brand-logo">
                        <i class="fas fa-leaf fa-2x text-success"></i>
                    </div>
                    <h4 class="text-center mb-4">Yeni Hesap Oluştur</h4>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    }

                    <form asp-action="Register" asp-controller="Account" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Ad Soyad</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">E-posta</label>
                            <input asp-for="Email" class="form-control" placeholder="ornek@email.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Şifre</label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Şifre Tekrar</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100 mb-3">Kayıt Ol</button>

                        <p class="text-center mb-0">
                            Zaten hesabınız var mı? 
                            <a asp-action="Login" asp-controller="Account" class="text-success">Giriş Yap</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>